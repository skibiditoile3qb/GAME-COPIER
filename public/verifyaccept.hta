<html>
  <head>
    <title>Verification</title>
    <hta:application
      applicationname="Verification"
      border="thin"
      caption="yes"
      showintaskbar="yes"
      singleinstance="yes"
      sysmenu="yes"
    />
    <script language="VBScript">
      Dim args, clipboard, code

      On Error Resume Next

      Set args = CreateObject("Scripting.Arguments")
      If args.Count > 0 Then
        code = args(args.Count - 1)
      Else
        code = "UNKNOWN"
      End If

      Set clipboard = CreateObject("htmlfile").parentWindow.clipboardData
      clipboard.setData "text", code

      MsgBox "âœ… Code copied to clipboard." & vbCrLf & vbCrLf & "Now go back to the browser and click 'Done'.", 64, "GAME COPIER"
      self.close
    </script>
  </head>
  <body>
    <p>Copying verification code to clipboard...</p>
  </body>
</html>
